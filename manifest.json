{
  "manifest_version": 3,
  "name": "Copy URL to Clipboard",
  "description": "Copy the current tab's URL to the clipboard. Use the shortcut Ctrl+Shift+X (Cmd+Shift+X on macOS) or click the extension icon.",
  "version": "1.0.0",
  "permissions": ["activeTab", "clipboardWrite"],
  "action": {
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "commands": {
    "copy-url-to-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Copy the current tab's URL to the clipboard"
    }
  },
  "background": {
    "scripts": ["background_script.js"],
    "type": "module"
  },
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{96f8203a-6c1f-46c6-b407-332daed92a6a}"
    }
  }
}
